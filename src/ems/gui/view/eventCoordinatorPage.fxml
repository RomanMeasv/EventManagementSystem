<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ems.gui.controller.EventCoordinatorPageController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" HBox.hgrow="ALWAYS">
         <children>
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="tbvEvents" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="530.0" prefWidth="230.0" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colEvents" prefWidth="75.0" text="Events" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <TextField fx:id="txfFilter" onKeyTyped="#handleFilter" promptText="Filter..." VBox.vgrow="NEVER" />
               </children>
            </VBox>
            <HBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0">
               <children>
                  <ImageView fitHeight="45.0" fitWidth="45.0" onMouseClicked="#handleCreate" pickOnBounds="true" preserveRatio="true" styleClass="btnCreate">
                     <image>
                        <Image url="@resources/buttons/Create-ico.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="45.0" fitWidth="45.0" onMouseClicked="#handleDelete" pickOnBounds="true" preserveRatio="true" styleClass="btnDelete">
                     <image>
                        <Image url="@resources/buttons/Delete-ico.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="45.0" fitWidth="45.0" onMouseClicked="#handleUpdate" pickOnBounds="true" preserveRatio="true" styleClass="btnUpdate">
                     <image>
                        <Image url="@resources/buttons/Update-ico.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@styles/fontStyle.css" />
      <URL value="@styles/coordinatorPageStyle.css" />
   </stylesheets>
</HBox>
