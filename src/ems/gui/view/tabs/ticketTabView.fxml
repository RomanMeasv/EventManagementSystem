                                    <Insets />
                                 </HBox.margin>
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Button>
                              <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#handleRemoveTicket" styleClass="remove-button" text="REMOVE" HBox.hgrow="NEVER">
