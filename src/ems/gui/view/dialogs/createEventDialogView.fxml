<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<DialogPane prefHeight="136.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox prefHeight="159.0" prefWidth="360.0">
         <children>
            <TextField promptText="Event name" />
            <TextField promptText="Description" />
            <TextField promptText="Optional Notes" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField promptText="Start time" />
                  <DatePicker promptText="Start date" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField promptText="End time" />
                  <DatePicker promptText="End date" />
               </children>
            </HBox>
            <TextField promptText="Location" />
            <TextField promptText="Location Guidence" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ListView prefHeight="200.0" prefWidth="200.0" />
                  <Button mnemonicParsing="false" text="Add Ticket Type" />
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
   <buttonTypes>
      <ButtonType fx:constant="APPLY" />
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
</DialogPane>
