<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<DialogPane prefHeight="136.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ems.gui.controller.EventDialogController">
   <content>
      <VBox prefHeight="159.0" prefWidth="360.0">
         <children>
            <TextField fx:id="txfEventName" promptText="Event name" />
            <TextField fx:id="txfEventDescription" promptText="Description" />
            <TextField fx:id="txfNotes" promptText="Optional Notes" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="txfStartTime" promptText="Start time hh:mm" />
                  <DatePicker fx:id="dtpStartDate" promptText="Start date" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="txfEndTime" promptText="End time hh:mm" />
                  <DatePicker fx:id="dtpEndDate" promptText="End date" />
               </children>
            </HBox>
            <TextField fx:id="txfLocation" promptText="Location" />
            <TextField fx:id="txfLocationGuidance" promptText="Location Guidence" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ListView fx:id="ltvTicketTypes" prefHeight="200.0" prefWidth="200.0" />
                  <Button mnemonicParsing="false" text="Add Ticket Type" />
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
   <buttonTypes>
      <ButtonType fx:constant="APPLY" />
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
</DialogPane>
